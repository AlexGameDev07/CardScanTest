<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LaunchActivity">

  <EditText
      android:id="@+id/editTextCardNumber"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="59dp"
      android:hint="Número de tarjeta"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextCVC" />

  <EditText
      android:id="@+id/editTextExpiryDate"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="146dp"
      android:hint="Fecha de expiración"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/editTextCVC"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="33dp"
      android:hint="CVC"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextExpiryDate" />

  <Button
      android:id="@+id/btnEscanear"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="118dp"
      android:layout_marginBottom="182dp"
      android:text="Escanear tarjeta"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <Button
      android:id="@+id/btnVerification"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="116dp"
      android:layout_marginBottom="88dp"
      android:text="Verificar"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>